{{#if @showFooter}}
  <div class="wrap">
    <div class="flexbox">
      <div class="first-box">
        <div class="heading">
          {{this.mainHeading}}
        </div>
        <div class="blurb">
          {{this.blurb}}
        </div>
      </div>
      <div class="second-box">
        <PluginOutlet @name="easy-footer-second-box">
          <div class="links">
            {{#each (theme-setting "sections") as |section|}}
              <div
                class="list"
                data-easyfooter-section={{dasherize section.text}}
              >
                <span title={{section.title}}>
                  {{section.text}}
                </span>

                <ul>
                  {{#each section.links as |link|}}
                    <li
                      class="footer-section-link-wrapper"
                      data-easyfooter-link={{dasherize link.text}}
                    >
                      <a
                        class="footer-section-link"
                        title={{link.title}}
                        href={{link.url}}
                        target={{link.target}}
                        referrerpolicy={{link.referrer_policy}}
                      >
                        {{link.text}}
                      </a>
                    </li>
                  {{/each}}
                </ul>
              </div>
            {{/each}}
          </div>
        </PluginOutlet>
      </div>

      <div class="third-box">
        <div class="footer-links">
          {{#each this.smallLinks as |link|}}
            <a
              class="small-link"
              data-easyfooter-small-link={{link.dataName}}
              title={{link.title}}
              target={{link.target}}
              href={{link.href}}
            >
              {{link.text}}
            </a>
          {{/each}}
        </div>

        <div class="social">
          {{#each this.socialLinks as |link|}}
            <a
              class="social-link"
              data-easyfooter-social-link={{link.dataName}}
              title={{link.title}}
              target={{link.target}}
              href={{link.href}}
            >
              {{d-icon link.icon}}
            </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
{{/if}}